<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">


    <bean id="connectionFactory" class="me.alanfoster.camelry.blueprint.camel.dom.common.ConnectionFactory">
        <property name="connectionString" value="${url}?username=${username}&amp;password=${password}" />
        <property name="maximumConnections" value="${maximumConnections}" />
        <property name="timeout" value="${timeout<caret>}" />
    </bean>

</blueprint>